{
  "include": [
    "./app.ts",
    "./routes/**/*.ts",
    "./controllers/**/*.ts",
    "./models/**/*.ts",
    "./middlewares/**/*.ts",
    "./config/**/*.ts",
    "./utils/**/*.ts",
    "./services/**/*.ts"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
